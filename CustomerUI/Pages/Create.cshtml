@page
@model CustomerUI.Pages.CreateModel
@{
    ViewData["Title"] = "Add Customer";
}

<h1>Add Customer</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Customer.Name" class="control-label"></label>
        <input asp-for="Customer.Name" class="form-control" />
        <span asp-validation-for="Customer.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Customer.Email" class="control-label"></label>
        <input asp-for="Customer.Email" class="form-control" type="email" />
        <span asp-validation-for="Customer.Email" class="text-danger"></span>
    </div>
    <input type="submit" value="Create" class="btn btn-primary" />
</form>

<a asp-page="./Index" class="btn btn-secondary">Back to List</a>